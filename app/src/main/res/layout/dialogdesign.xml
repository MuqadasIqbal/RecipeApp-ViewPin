    <com.goodiebag.pinview.Pinview
        android:id="@+id/etPinCode"
        android:layout_width="280dp"
        android:layout_height="80dp"
        app:pinWidth="50dp"
        app:pinHeight="50dp"
        app:pinLength="4"
        app:hint="0"
